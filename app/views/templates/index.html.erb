  <table id="templates-table" class="table table-hover shadow-lg rounded">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Titel</th>
        <th scope="col">Erstellt</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <th scope="row">1</th>
        <td>Paypal</td>
        <td><span class="fas fa-check"></span></td>
      </tr>
      <tr>
        <th scope="row">2</th>
        <td>Zahlungsoptionen</td>
        <td><span class="fas fa-check"></span></td>
      </tr>
    </tbody>
  </table>

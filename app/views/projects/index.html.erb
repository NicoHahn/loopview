  <div class="button-div">
    <%= button_to "Projekt erstellen", new_project_path, method: :get, class: "btn btn-info float-end mt-5" %>
  </div>
<div class="table-container">
  <table id="projects-table" class="table table-hover shadow rounded-custom">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Key</th>
        <th scope="col">Titel</th>
        <th scope="col">Aktionen</th>
      </tr>
    </thead>
    <tbody>
      <% @projects.each do |p| %>
        <tr>
          <td><%= p.id %></td>
          <td><%= p.external_key %></td>
          <td><%= p.external_title %></td>
          <td>
            <%= link_to(project_path(id: p.id),:class => 'btn action_btn') do %>
              <i class="fas fa-list"></i>
            <% end %>
            <%= link_to(project_path(id: p.id), :method => 'delete',:class => 'btn action_btn') do %>
              <i class="fas fa-trash-alt"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>



<div class="table-container">
  <table id="projects-table" class="table table-hover shadow rounded-custom">
    <thead>
    <tr>
      <th scope="col">Titel</th>
      <th scope="col">Erstellt</th>
      <th scope="col">Aktionen</th>
    </tr>
    </thead>
    <tbody>
    <% @issue_templates.each do |it| %>
      <tr>
        <td><%= it.title %></td>
        <td><%= it.created_for_project?(@project) %></td>
        <td>
          <%= link_to((it.created_for_project?(@project) ? edit_concrete_issue_template_path(id: it.id) : new_concrete_issue_template_path(issue_template_id: it.id)), :class => 'btn action_btn') do %>
            <i class="fas fa-list"></i>
          <% end %>
          <a class="btn action_btn <%= 'disabled' unless it.created_for_project?(@project) %>" href="<%= concrete_issue_template_path(id: it.id) %>" data-method="delete">
            <i class="fas fa-trash-alt"></i>
          </a>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
